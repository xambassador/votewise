- appName = "Votewise";
- supportEmail = "support@votewise.com"
- socialLinks = [{ name: "Twitter", url: "https://twitter.com/votewise" },{ name: "Facebook", url: "https://facebook.com/votewise" }, { name: "Instagram", url: "https://instagram.com/votewise" }]
- docsLink = "https://docs.votewise.com"

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Welcome to #{appName}
    style.
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        margin: 0;
        padding: 0;
        background-color: hsla(214, 11.9%, 11.6%, 1); /* --black-500 */
        color: hsla(220, 14.3%, 95.9%, 1); /* --gray-100 */
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .email-wrapper {
        background-color: hsla(240, 5.3%, 11.2%, 1); /* --nobel-black-100 */
        border-radius: 8px;
        padding: 30px;
        margin-top: 20px;
        border: 1px solid hsla(240, 3.7%, 15.9%, 1); /* --nobel-black-200 */
      }
      .header {
        text-align: center;
        margin-bottom: 30px;
      }
      .logo {
        max-width: 120px;
        margin-bottom: 20px;
      }
      h1 {
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 16px;
      }
      h2 {
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        font-size: 20px;
        font-weight: 600;
        margin: 30px 0 16px;
      }
      p {
        color: hsla(218, 10.6%, 64.9%, 1); /* --gray-400 */
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 24px;
      }
      .celebration {
        text-align: center;
        font-size: 48px;
        margin: 20px 0;
      }
      .welcome-message {
        font-size: 18px;
        margin-bottom: 30px;
        text-align: center;
      }
      .action-button {
        display: inline-block;
        background-color: hsla(18, 27%, 49.4%, 1); /* --orange-50 */
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        text-decoration: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-weight: 500;
        margin: 16px 0;
        text-align: center;
      }
      .action-button:hover {
        background-color: hsla(18, 27%, 45%, 1); /* slightly darker orange */
      }
      .next-steps {
        background-color: hsla(240, 2.4%, 8%, 1); /* --nobel-black-50 */
        border-radius: 6px;
        padding: 20px;
        margin: 30px 0;
      }
      .step {
        display: flex;
        align-items: flex-start;
        margin-bottom: 20px;
      }
      .step:last-child {
        margin-bottom: 0;
      }
      .step-number {
        flex-shrink: 0;
        width: 28px;
        height: 28px;
        margin-right: 15px;
        background-color: hsla(18, 27%, 49.4%, 1); /* --orange-50 */
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
      }
      .step-content {
        flex-grow: 1;
      }
      .step-content h3 {
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        font-size: 16px;
        margin: 0 0 5px;
      }
      .step-content p {
        margin: 0;
        font-size: 14px;
      }
      .divider {
        height: 1px;
        background-color: hsla(216, 12.2%, 83.9%, 0.1); /* --gray-300 with opacity */
        margin: 30px 0;
      }
      .featured-content {
        margin: 30px 0;
      }
      .featured-item {
        background-color: hsla(240, 3.7%, 15.9%, 1); /* --nobel-black-200 */
        border-radius: 6px;
        padding: 15px;
        margin-bottom: 15px;
      }
      .featured-item h3 {
        color: hsla(0, 0%, 89.8%, 1); /* --white-50 */
        font-size: 16px;
        margin: 0 0 10px;
      }
      .featured-item p {
        margin: 0;
        font-size: 14px;
      }
      .footer {
        text-align: center;
        color: hsla(220, 8.9%, 46.1%, 1); /* --gray-500 */
        font-size: 14px;
        margin-top: 30px;
      }
      .footer p {
        color: hsla(220, 8.9%, 46.1%, 1); /* --gray-500 */
        font-size: 14px;
        margin: 5px 0;
      }
      .social-links {
        margin: 20px 0;
      }
      .social-link {
        display: inline-block;
        margin: 0 10px;
        color: hsla(218, 10.6%, 64.9%, 1); /* --gray-400 */
        text-decoration: none;
      }
      @media only screen and (max-width: 600px) {
        .container {
          padding: 10px;
        }
        .email-wrapper {
          padding: 20px;
        }
      }

  body
    div.container
      div.email-wrapper
        div.header
          if logo
            img.logo(src=logo, alt=`${appName} Logo`)
          h1 Onboarding Complete!

        div.celebration ðŸŽ‰

        p.welcome-message Congratulations, #{name}! You're officially part of the #{appName} community.
        p Your onboarding has been completed and your account is now fully activated. We're thrilled to have you on board and can't wait to see what you'll share with the community.
        div.divider
        h2 Get Started in 3 Easy Steps
        div.next-steps
          div.step
            div.step-number 1
            div.step-content
              h3 Complete Your Profile
              p Add a profile picture and bio so others can get to know you better.

          div.step
            div.step-number 2
            div.step-content
              h3 Explore Content
              p Discover ideas and content from other users in your areas of interest.

          div.step
            div.step-number 3
            div.step-content
              h3 Share Your First Idea
              p Post your thoughts and see what the community thinks!

        div.divider

        h2 Trending on #{appName}

        div.featured-content
          if featuredContent && featuredContent.length > 0
            each item in featuredContent
              div.featured-item
                h3 #{item.title}
                p #{item.description}
          else
            div.featured-item
              h3 How to Get the Most Out of #{appName}
              p Tips and tricks from our power users on making meaningful connections.

            div.featured-item
              h3 This Week's Most Popular Ideas
              p See what's trending and join the conversation.

        div.divider

        p Need help getting started? Check out our #{docsLink} or contact our support team.

        div.footer
          if socialLinks
            div.social-links
              each link in socialLinks
                a.social-link(href=link.url) #{link.name}
          else
            div.social-links
              a.social-link(href="#") Twitter
              a.social-link(href="#") Facebook
              a.social-link(href="#") Instagram

          p If you have any questions, contact our support team at #{supportEmail}
          p &copy; #{new Date().getFullYear()} #{appName}. All rights reserved.
