{
  "name": "votewise-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "web:start": "lerna exec --scope @votewise/web -- yarn start",
    "web:dev": "lerna exec --scope @votewise/web -- yarn dev",
    "web:build": "lerna exec --scope @votewise/web -- yarn build",
    "server:start": "lerna exec --scope @votewise/server -- yarn start",
    "server:dev": "lerna exec --scope @votewise/server -- yarn dev",
    "server:build": "lerna exec --scope @votewise/server -- yarn build",
    "server:clean": "lerna exec --scope @votewise/server -- yarn clean",
    "server:test": "lerna exec --scope @votewise/server -- yarn test",
    "server:test:watch": "lerna exec --scope @votewise/server -- yarn test:watch",
    "db:generate": "lerna exec --scope @votewise/prisma -- yarn run db:generate",
    "db:migrate": "lerna exec --scope @votewise/prisma -- yarn run db:migrate",
    "db:studio": "lerna exec --scope @votewise/prisma -- yarn run db:studio",
    "db:seed": "lerna exec --scope @votewise/prisma -- yarn run db:seed",
    "db:clean": "lerna exec --scope @votewise/prisma -- yarn run db:clean",
    "clean": "lerna clean --yes && rm -rf node_modules && rm -rf ./apps/web/.next",
    "dev": "lerna run dev --parallel --stream --no-bail --scope @votewise/web --scope @votewise/server --scope @votewise/static-server & npm run static-server & wait",
    "start": "lerna run start --parallel --stream --no-bail --scope @votewise/web --scope @votewise/server --scope @votewise/static-server & npm run static-server & wait",
    "dev:window": "lerna run dev --parallel --stream --no-bail --scope @votewise/web --scope @votewise/server --scope @votewise/static-server",
    "static-server": "node ./scripts/run-static-server.js",
    "predev": "dotenv-checker --schema .env.example --env .env",
    "postinstall": "yarn run db:migrate && yarn run db:seed"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "chalk": "4.1.2",
    "dotenv-checker": "^1.1.5",
    "jest": "^29.4.3",
    "lerna": "^6.5.1",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5"
  },
  "packageManager": "yarn@1.22.19"
}
