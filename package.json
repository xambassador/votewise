{
  "name": "votewise-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "web:start": "lerna exec --scope @votewise/web -- yarn start",
    "web:dev": "lerna exec --scope @votewise/web -- yarn dev",
    "web:build": "lerna exec --scope @votewise/web -- yarn build",
    "server:start": "lerna exec --scope @votewise/api -- yarn start",
    "server:dev": "lerna exec --scope @votewise/api -- yarn dev",
    "server:build": "lerna exec --scope @votewise/api -- yarn build",
    "server:clean": "lerna exec --scope @votewise/api -- yarn clean",
    "server:test": "lerna exec --scope @votewise/api -- yarn test",
    "server:test:watch": "lerna exec --scope @votewise/api -- yarn test:watch",
    "upload:start": "lerna exec --scope @votewise/upload -- yarn start",
    "upload:dev": "lerna exec --scope @votewise/upload -- yarn dev",
    "upload:build": "lerna exec --scope @votewise/upload -- yarn build",
    "upload:clean": "lerna exec --scope @votewise/upload -- yarn clean",
    "db:generate": "lerna exec --scope @votewise/prisma -- yarn run db:generate",
    "db:migrate": "lerna exec --scope @votewise/prisma -- yarn run db:migrate",
    "db:studio": "lerna exec --scope @votewise/prisma -- yarn run db:studio",
    "db:seed": "lerna exec --scope @votewise/prisma -- yarn run db:seed",
    "db:clean": "lerna exec --scope @votewise/prisma -- yarn run db:clean",
    "db:deploy": "lerna exec --scope @votewise/prisma -- yarn run db:deploy",
    "clean": "lerna clean --yes && rm -rf node_modules && rm -rf ./apps/web/.next",
    "dev": "lerna run dev --parallel --stream --no-bail --scope @votewise/web --scope @votewise/api --scope @votewise/upload & wait",
    "start": "lerna run start --parallel --stream --no-bail --scope @votewise/web --scope @votewise/api --scope @votewise/upload & npm run upload & wait",
    "build": "lerna run build --parallel --stream --no-bail --scope @votewise/web --scope @votewise/api --scope @votewise/upload",
    "dev:window": "lerna run dev --parallel --stream --no-bail --scope @votewise/web --scope @votewise/api --scope @votewise/upload",
    "static-server": "node ./scripts/run-static-server.js",
    "graph": "nx graph",
    "format": "prettier . --write \"**/*.{ts,tsx,md}\" --cache",
    "format:check": "prettier . --check \"**/*.{ts,tsx,md}\"",
    "lint": "lerna run lint --parallel --stream --no-bail",
    "lint:fix": "lerna run lint --parallel --stream --no-bail -- --fix",
    "lint:report": "lerna run lint --parallel --stream --no-bail -- --report"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/jest": "^29.5.12",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lerna": "^8.0.2",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2"
  },
  "packageManager": "yarn@4.0.2"
}
