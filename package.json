{
  "name": "votewise",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "web:build": "lerna exec --scope @votewise/web -- yarn build",
    "web:dev": "lerna exec --scope @votewise/web -- yarn dev",
    "api:start": "lerna exec --scope @votewise/api -- yarn start",
    "api:dev": "lerna exec --stream --parallel --no-sort --scope @votewise/lib --scope @votewise/prisma --scope @votewise/schema --scope @votewise/api -- yarn dev",
    "api:build": "lerna exec --scope @votewise/api -- yarn build",
    "api:test": "lerna exec --scope @votewise/api -- yarn test",
    "api:test:watch": "lerna exec --scope @votewise/api -- yarn test:watch",
    "upload:start": "lerna exec --scope @votewise/upload -- yarn start",
    "upload:dev": "lerna exec --scope @votewise/upload -- yarn dev",
    "upload:build": "lerna exec --scope @votewise/upload -- yarn build",
    "db:generate": "lerna exec --scope @votewise/prisma -- yarn run db:generate",
    "db:migrate": "lerna exec --scope @votewise/prisma -- yarn run db:migrate",
    "db:studio": "lerna exec --scope @votewise/prisma -- yarn run db:studio",
    "db:seed": "lerna exec --scope @votewise/prisma -- yarn run db:seed",
    "db:clean": "lerna exec --scope @votewise/prisma -- yarn run db:clean",
    "db:deploy": "lerna exec --scope @votewise/prisma -- yarn run db:deploy",
    "clean": "lerna run clean --parallel",
    "clean:build": "lerna run clean:build --parallel",
    "dev": "lerna run dev --stream",
    "start": "lerna run start --stream",
    "build": "lerna run build --stream",
    "graph": "nx graph",
    "format": "prettier . --write \"**/*.{ts,tsx,md}\" --cache",
    "format:check": "prettier . --check \"**/*.{ts,tsx,md}\"",
    "lint": "lerna run lint --parallel --stream --no-bail",
    "lint:fix": "lerna run lint --parallel --stream --no-bail -- --fix",
    "lint:report": "lerna run lint --parallel --stream --no-bail -- --report",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-functional": "^6.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-unused-imports": "^4.1.3",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.0",
    "tailwindcss": "3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=4.0.2"
  },
  "packageManager": "yarn@4.0.2",
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{json,md,yml}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
