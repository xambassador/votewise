{
  "extends": "@votewise/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@/styles/*": ["styles/*"],
      "@/hooks/*": ["lib/hooks/*"],
      "@/routes/*": ["routes/*"],
      "@/store/*": ["lib/store/*"],
      "@/services/*": ["services/*"],
      "@/server/*": ["server/*"],
      "@/types/*": ["types/*"],
      "@/lib/*": ["lib/*"],
      "@/config/*": ["config/*"],
      "@votewise/ui/*": ["@votewise/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
