{
  "name": "@votewise/prisma",
  "private": true,
  "version": "0.0.0",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "client",
    "zod",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./client/index.d.ts"
    },
    "./runtime": {
      "types": "./runtime/index.d.ts"
    }
  },
  "scripts": {
    "db:generate": "prisma generate && prisma format",
    "db:migrate": "yarn prisma migrate dev",
    "db:studio": "yarn prisma studio",
    "db:seed": "yarn prisma db seed",
    "db:deploy": "yarn prisma migrate deploy",
    "db:clean": "ts-node --transpile-only ./cleanDb.ts",
    "seed": "ts-node --transpile-only ./seed.ts",
    "clean": "rimraf --glob ./dist ./zod ./node_modules",
    "clean:build": "rm -rf dist",
    "dev": "rm -rf dist && tsup --watch",
    "build": "rm -rf ./dist && tsup"
  },
  "devDependencies": {
    "@types/node": "^20.16.1",
    "@votewise/config": "*",
    "@votewise/tsconfig": "*",
    "bcrypt": "^5.1.1",
    "cli-spinners": "^3.1.0",
    "ora": "8.0.1",
    "prisma": "^5.18.0",
    "slug": "^9.1.0",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.18.0",
    "zod": "^3.23.8",
    "zod-prisma": "^0.5.4"
  },
  "prisma": {
    "seed": "ts-node --transpile-only ./seed.ts"
  },
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "dts": true,
    "clean": true
  }
}
