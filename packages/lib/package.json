{
  "name": "@votewise/lib",
  "private": true,
  "version": "0.0.0",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    "./classnames": {
      "import": "./dist/classnames.mjs",
      "require": "./dist/classnames.js"
    },
    "./environment": {
      "import": "./dist/environment.mjs",
      "require": "./dist/environment.js"
    },
    "./errors": {
      "import": "./dist/errors.mjs",
      "require": "./dist/errors.js"
    },
    "./hashtags": {
      "import": "./dist/hashtags.mjs",
      "require": "./dist/hashtags.js"
    },
    "./logger": {
      "import": "./dist/logger.mjs",
      "require": "./dist/logger.js"
    },
    "./random": {
      "import": "./dist/random.mjs",
      "require": "./dist/random.js"
    },
    "./slugify": {
      "import": "./dist/slugify.mjs",
      "require": "./dist/slugify.js"
    },
    "./text": {
      "import": "./dist/text.mjs",
      "require": "./dist/text.js"
    },
    "./times": {
      "import": "./dist/times.mjs",
      "require": "./dist/times.js"
    },
    "./webstorage": {
      "import": "./dist/webstorage.mjs",
      "require": "./dist/webstorage.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "build": "tsup",
    "dev": "rm -rf dist && tsup --watch",
    "clean:build": "rm -rf dist",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "tailwind-merge": "^2.5.2",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.16.1",
    "@votewise/config": "*",
    "ts-node": "10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "tsup": {
    "entry": [
      "./*.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "dts": true,
    "clean": true
  }
}
