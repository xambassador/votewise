{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "composite": false,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "verbatimModuleSyntax": false,
    "lib": ["DOM", "DOM.Iterable"],
    "incremental": false
