{
  "extends": "@votewise/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/test/*": ["test/*"],
      "@votewise/lib/logger": ["../lib/logger"],
      "@votewise/lib": ["../lib/*"],
      "@votewise/prisma": ["../prisma/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "**/node_modules/*"]
}
