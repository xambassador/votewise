{
  "extends": "@votewise/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@/src/*": ["src/*"],
      "@/test/*": ["test/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "**/node_modules/*"]
}
