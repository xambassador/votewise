{
  "name": "@votewise/text",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./truncate": {
      "import": "./dist/truncate.mjs",
      "require": "./dist/truncate.js"
    },
    "./truncate-on-word": {
      "import": "./dist/truncate-on-word.mjs",
      "require": "./dist/truncate-on-word.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "build": "tsup",
    "dev": "rm -rf dist && tsup",
    "clean:build": "rm -rf dist",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "tsup": {
    "entry": [
      "./src/*.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "dts": true,
    "clean": true
  }
}
