{
  "name": "@votewise/crypto",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./edge": {
      "import": "./dist/edge.mjs",
      "require": "./dist/edge.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "build": "tsup",
    "dev": "tsup",
    "clean:build": "rm -rf dist",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.16.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "tsup": {
    "entry": [
      "./src/*.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "dts": true,
    "clean": true
  }
}
